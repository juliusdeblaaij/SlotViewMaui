<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SlotView.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="self"
    xmlns:local="clr-namespace:SlotView.MAUI"
    FlyoutBackgroundColor="#3d3d3d"
    Shell.FlyoutBehavior="Flyout">
        <Shell.FlyoutHeaderTemplate>
            <DataTemplate>
            <Grid x:Name="HeaderGrid"
                  Background="{Binding Source={x:Reference self}, Path=HeaderBackground}"
                HeightRequest="200">
                <Label Text="SlotView"
                       TextColor="White"
                       FontAttributes="Bold"
                       Rotation="-8"
                       FontSize="52"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
                </Grid>
            </DataTemplate>
        </Shell.FlyoutHeaderTemplate>
    <ShellContent
        Title="Octocats"
        ContentTemplate="{DataTemplate local:OctocatsPage}"
        Route="OctocatsPage" />
    <ShellContent
        Title="SlotMachine"
        ContentTemplate="{DataTemplate local:SlotMachinePage}"
        Route="SlotMachinePage" />
    <ShellContent
        Title="Hello World"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />    


</Shell>

